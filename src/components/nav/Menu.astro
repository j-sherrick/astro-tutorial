---
interface Props {
    class?: string;
}
const { class: className } = Astro.props;
---

<menu class:list={[className]}>
    <slot />
</menu>

<style>

    menu {

    }

    .dropdown {
        display: none;
        position: absolute;
    }

    .navigation {
        display: flex;
        align-items: center;
        position: relative;
        gap: 2rem;
    }
    
    .navigation * {
        letter-spacing: 0.075rem;
        font-size: 2rem;
    }
</style>
